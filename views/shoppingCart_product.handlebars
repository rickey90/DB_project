<html>
	<div>
		<h3>Add Product to Customer Shopping Cart</h3>
		<form id="add_product_cart" action="/shoppingCart_product" method="post">
			Customer: <select name="cust_id">
				{{#each customer}}
					<option value="{{cust_id}}">{{f_name}} {{l_name}}</option>
				{{/each}}
			</select><br>
			Product: <select name="p_id">
				{{#each product}}
					<option value="{{p_id}}">{{p_name}}</option>
				{{/each}}
			</select><br>
			<input type="submit" value="Submit">
		</form>
	</div>
	<div>
		<h3>Items in Customer Shopping Cart</h3>
		<table>
			<thead>
				<th>Customer Name</th>
				<th>Product</th>
				<th>Cost</th>
			</thead>
			<tbody>
				{{#each cart}}
				<tr>
					<td>{{f_name}} {{l_name}}</td>
					<td>{{p_name}}</td>
					<td>${{price}}</td>
					<td><button onclick="deleteFromCart({{p_id}}, {{cust_id}})">Delete</button></td>
				</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
</html>